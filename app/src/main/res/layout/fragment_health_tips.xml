<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/tv_total_postures_time"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:text="-   Total Time   -"
            android:textAppearance="@style/TextViewPagerTitleStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_dash_separator"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_postures_time"
            tools:layout_editor_absoluteX="0dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_standing"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator"
            tools:layout_editor_absoluteX="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_standing"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:layout_marginStart="24dp"
                android:scaleType="fitStart"
                android:tint="?attr/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewStaticTips"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_static" />

            <TextView
                android:id="@+id/tv_standing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Static"
                android:textAppearance="@style/TextViewMyStatsLabelStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_standing_value"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@id/img_standing"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_standing_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:14:25"
                android:textAppearance="@style/TextViewMyStatsValueStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewStaticTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"
                android:visibility="gone"
                app:srcCompat="@drawable/alerter_ic_face" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_dash_separator_standing"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_standing"
            tools:layout_editor_absoluteX="24dp" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_crounching"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator_standing"
            tools:layout_editor_absoluteX="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_crounching"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:layout_marginStart="24dp"
                android:scaleType="fitStart"
                android:tint="?attr/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCrouchingTips"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_crouching_new" />

            <TextView
                android:id="@+id/tv_crounching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crouching"
                android:textAppearance="@style/TextViewMyStatsLabelStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_crounching_value"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@id/img_crounching"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="70dp" />

            <TextView
                android:id="@+id/tv_crounching_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:02:29"
                android:textAppearance="@style/TextViewMyStatsValueStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewCrouchingTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"
                android:visibility="gone"
                app:srcCompat="@drawable/alerter_ic_face" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_dash_separator_crounching"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_crounching"
            tools:layout_editor_absoluteX="24dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_kneeling"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator_crounching"
            tools:layout_editor_absoluteX="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_kneeling"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:layout_marginStart="24dp"
                android:scaleType="fitStart"
                android:tint="?attr/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewKneelingTips"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_kneeling" />

            <TextView
                android:id="@+id/tv_kneeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kneeling"
                android:textAppearance="@style/TextViewMyStatsLabelStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_kneeling_value"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@id/img_kneeling"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="73dp" />

            <TextView
                android:id="@+id/tv_kneeling_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:01:58"
                android:textAppearance="@style/TextViewMyStatsValueStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewKneelingTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                app:layout_constraintVertical_bias="0.6"
                app:srcCompat="@drawable/alerter_ic_face" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_dash_separator_kneeling"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_kneeling"
            tools:layout_editor_absoluteX="24dp" />



        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_tip_toes"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/custom_border"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator_kneeling"
            tools:layout_editor_absoluteX="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_tip_toes"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:scaleType="fitStart"
                android:tint="?attr/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewTiptoesTips"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tip_toes" />

            <TextView
                android:id="@+id/tv_tip_toes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On tip toes"
                android:textAppearance="@style/TextViewMyStatsLabelStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_tip_toes_value"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@id/img_tip_toes"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="69dp" />

            <TextView
                android:id="@+id/tv_tip_toes_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:07:36"
                android:textAppearance="@style/TextViewMyStatsValueStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewTiptoesTips"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tint="@color/colorPrimary"
                app:layout_constraintVertical_bias="0.6"
                app:srcCompat="@drawable/ic_healthtips" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_dash_separator_tip_toes"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tip_toes"
            tools:layout_editor_absoluteX="24dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_vibration"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator_tip_toes"
            tools:layout_editor_absoluteX="8dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_vibration"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:layout_marginStart="24dp"
                android:scaleType="fitStart"
                android:tint="?attr/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewVibrationTips"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_vibration" />

            <TextView
                android:id="@+id/tv_vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibration"
                android:textAppearance="@style/TextViewMyStatsLabelStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_vibration_value"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@id/img_vibration"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="69dp" />

            <TextView
                android:id="@+id/tv_vibration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textAppearance="@style/TextViewMyStatsValueStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="246dp" />

            <ImageView
                android:id="@+id/imageViewVibrationTips"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"
                android:visibility="gone"
                app:srcCompat="@drawable/alerter_ic_face" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/view_dash_separator_vibration"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tip_toes"
            tools:layout_editor_absoluteX="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fake_tip"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_dash_separator_vibration"
            />

    </android.support.constraint.ConstraintLayout>

</ScrollView>