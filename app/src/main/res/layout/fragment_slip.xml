<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_cushioning_detection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="-   Cushioning and Slip detection   -"
            android:textAppearance="@style/TextViewPagerTitleStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="91dp" />

        <View
            android:id="@+id/view_dash_separator"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cushioning_detection"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_cushioning"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cushioning"
            android:theme="@style/TextViewHeaderStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator"
            tools:layout_editor_absoluteX="8dp" />



        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutCushioningIntensity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cushioning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <com.example.fadi.testingrx.ui.view.GaugeView
                android:id="@+id/gauge_view_cushioning_intensity_level"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="187dp" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_cushioning_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutCushioningIntensity"
            android:layout_marginLeft="8dp"

            android:text="80%"
            android:textColor="@color/fBlack"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />



        <View
            android:id="@+id/view_dash_separator_intensity"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/dash_separator"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cushioning_value"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_slip_times"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Slip detection"
            android:theme="@style/TextViewHeaderStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_dash_separator_intensity"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/tv_slip_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16dp"
            android:text="2 times"
            android:textColor="@color/fBlack"
            app:layout_constraintTop_toBottomOf="@+id/tv_slip_times"
            />

    </android.support.constraint.ConstraintLayout>

</ScrollView>