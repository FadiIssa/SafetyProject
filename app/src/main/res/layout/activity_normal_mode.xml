<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@android:style/Theme.Black"
        android:background="@color/fBlack"
        tools:context="com.example.fadi.testingrx.NormalModeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/normalModeActivity_toolbar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:id="@+id/buttonStartActivityNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Start Activity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp" />

        <Button
            android:id="@+id/buttonStopActivityNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="8dp"
            android:text="Stop Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewStanding"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/textViewLeftConnectionStatus"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewKneeling"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/textViewLeftConnectionStatus"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCrouching"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/imageViewCrouching"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/textViewLeftConnectionStatus"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textViewCrouching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewCrouching"
        app:layout_constraintRight_toRightOf="@+id/imageViewCrouching"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCrouching" />

    <TextView
        android:id="@+id/textViewKneeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewKneeling"
        app:layout_constraintRight_toRightOf="@+id/imageViewKneeling"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKneeling" />

    <TextView
        android:id="@+id/textViewStanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewStanding"
        app:layout_constraintRight_toRightOf="@+id/imageViewStanding"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStanding" />

    <ImageView
        android:id="@+id/imageViewStairs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@+id/textViewCrouching"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewCrouching"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageViewCrouching"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewSteps"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@+id/textViewKneeling"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewKneeling"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageViewKneeling" />

    <ImageView
        android:id="@+id/imageViewTiptoes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/textViewLeftConnectionStatus"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewKneeling"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageViewStanding"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.627" />

    <TextView
        android:id="@+id/textViewStairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewStairs"
        app:layout_constraintRight_toRightOf="@+id/imageViewStairs"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStairs" />

    <TextView
        android:id="@+id/textViewSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewSteps"
        app:layout_constraintRight_toRightOf="@+id/imageViewSteps"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSteps" />

    <TextView
        android:id="@+id/textViewTiptoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewTiptoes"
        app:layout_constraintRight_toRightOf="@+id/imageViewTiptoes"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTiptoes" />

    <ImageView
        android:id="@+id/imageViewPronSup"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewAngleRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPronSup"
        app:layout_constraintLeft_toRightOf="@+id/imageViewPronSup"
        app:layout_constraintTop_toTopOf="@+id/imageViewPronSup" />

    <TextView
        android:id="@+id/textViewAngleLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPronSup"
        app:layout_constraintRight_toLeftOf="@+id/imageViewPronSup"
        app:layout_constraintTop_toTopOf="@+id/imageViewPronSup" />

    <ImageView
        android:id="@+id/imageViewWalkingTime"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="@+id/textViewTiptoes"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewTiptoes"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageViewTiptoes" />

    <ImageView
        android:id="@+id/imageViewVibrationTime"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewStanding"
        app:layout_constraintRight_toRightOf="@+id/imageViewStanding"
        app:layout_constraintTop_toTopOf="@+id/textViewStanding"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewWalking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewWalkingTime"
        app:layout_constraintRight_toRightOf="@+id/imageViewWalkingTime"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWalkingTime" />

    <TextView
        android:id="@+id/textViewVibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewVibrationTime"
        app:layout_constraintRight_toRightOf="@+id/imageViewVibrationTime"
        app:layout_constraintTop_toBottomOf="@+id/imageViewVibrationTime" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:0:0"
        app:layout_constraintRight_toLeftOf="@+id/buttonStopActivityNormal"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonStartActivityNormal"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonStartActivityNormal"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/buttonStartActivityNormal"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewLeftConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="disconnected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normalModeActivity_toolbar" />

    <TextView
        android:id="@+id/textViewRightConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="disconnected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normalModeActivity_toolbar" />

    <ImageView
        android:id="@+id/imageViewCalories"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewStairs"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageViewDistance"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewVibration"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewDistance"
        app:layout_constraintRight_toRightOf="@+id/imageViewDistance"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDistance" />

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewCalories"
        app:layout_constraintRight_toRightOf="@+id/imageViewCalories"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCalories" />

</android.support.constraint.ConstraintLayout>


